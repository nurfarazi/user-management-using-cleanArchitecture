{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MongoDB": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/usermanagement-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "JwtSettings": {
    "Secret": "SuperSecretKeyForJwtTokenGeneration123!",
    "Issuer": "UserManagementAPI",
    "Audience": "UserManagementApp",
    "ExpirationInMinutes": 60
  },
  "EmailSettings": {
    "SmtpServer": "localhost",
    "SmtpPort": 25,
    "SmtpUser": "",
    "SmtpPass": "",
    "FromEmail": "noreply@usermanagement.com",
    "FromName": "User Management System"
  },
  "MongoDbSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "UserManagementDb",
    "MaxConnectionPoolSize": 100,
    "ServerSelectionTimeoutMs": 30000,
    "RetryWrites": true
  },
  "ValidationSettings": {
    "BlockedEmailDomains": [ "tempmail.org", "mailinator.com", "guerrillamail.com" ],
    "BangladeshOperatorPrefixes": [ "013", "014", "015", "016", "017", "018", "019" ],
    "MinPasswordLength": 12,
    "PasswordHistoryLimit": 5,
    "RestrictedKeywords": [ "admin", "support", "system", "root", "moderator" ],
    "RequiredTermsVersion": "1.0",
    "RequiredPrivacyPolicyVersion": "1.0"
  },
  "AllowedHosts": "*"
}
