PUT {{baseUrl}}/api/v1/users/{{userId}}
Content-Type: {{contentType}}

{
  "firstName": "John Updated",
  "lastName": "Doe Updated",
  "displayName": "Johnny",
  "phoneNumber": "+8801711223344",
  "dateOfBirth": "1990-01-15"
}

